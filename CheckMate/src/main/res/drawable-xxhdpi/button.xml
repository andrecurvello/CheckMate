<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                    android:color="#3E5368" />
            <stroke
                    android:width="0dp"
                    android:color="#2ecc71" />
            <corners
                    android:radius="5dp" />
            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                    android:startColor="#3E5368"
                    android:endColor="#2c3e50"
                    android:angle="270" />
            <stroke
                    android:width="0dp"
                    android:color="#27ae60" />
            <corners
                    android:radius="5dp" />
            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp" />
        </shape>
    </item>
</selector>